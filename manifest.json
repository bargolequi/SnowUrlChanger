{
    "manifest_version": 2,
    "name": "ServiceNow Redirector",
    "version": "1.0",
    "description": "Redirects to ServiceNow incident page based on sys_id.",
    "permissions": [
        "activeTab"
    ],
    "browser_action": {
        "default_icon": "icon.png",
        "default_title": "ServiceNow Redirect"
    },
    "background": {
        "scripts": [
            "background"
        ],
        "persistent": false
    }
}