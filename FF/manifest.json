{
    "manifest_version": 2,
    "name": "ServiceNow Redirect",
    "version": "1.1",
    "description": "Redirects to ServiceNow incident page based on sys_id.",
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "permissions": [
        "activeTab",
        "tabs",
        "notifications"
    ],
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": false
    },
    "browser_action": {
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        },
        "default_title": "ServiceNow Redirect"
    }
}